#!/usr/bin/env node

//
// Example usage:
// cat tarball.tgz | ./npm-verify checks.js | worked.tgz
//

var fs = require('fs');
var VerifyStream = require('../');

var verifier = process.stdin
  .pipe(new VerifyStream({
    // log: console.log,
    // read: { log: false },
    checks: ['foo'] // require(process.argv[2])
  }))

if (process.env.TEST_PIPE) {
  verifier.pipe(process.stdout);
}
